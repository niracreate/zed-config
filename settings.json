// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "use_system_window_tabs": false,
  "relative_line_numbers": true,
  "gutter": {
    "runnables": true,
    "line_numbers": true
  },
  "toolbar": {
    "code_actions": false
  },
  "autoscroll_on_clicks": false,
  "outline_panel": {
    "button": true,
    "file_icons": true,
    "folder_icons": true
  },
  "git_panel": {
    "button": true,
    "status_style": "icon",
    "sort_by_path": false,
    "collapse_untracked_diff": false
  },
  "search": {
    "button": true
  },
  "status_bar": {
    "cursor_position_button": true,
    "active_language_button": true
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "preview_tabs": {
    "enabled": true
  },
  "tabs": {
    "git_status": true,
    "file_icons": true
  },
  "title_bar": {
    "show_sign_in": true,
    "show_menus": false,
    "show_branch_icon": true
  },
  "project_panel": {
    "sticky_scroll": true,
    "open_file_on_paste": true,
    "hide_hidden": false,
    "hide_root": false,
    "git_status": true,
    "folder_icons": true
  },
  "agent_ui_font_size": 16.0,
  "zoomed_padding": true,
  "terminal": {
    "shell": "system",
    "button": true,
    "dock": "bottom"
  },
  "telemetry": {
    "diagnostics": true,
    "metrics": false
  },
  "icon_theme": {
    "mode": "system",
    "light": "Zed (Default)",
    "dark": "Material Icon Theme"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 200
    }
  },
  "diagnostics": {
    "inline": {
      "enabled": true,
      "max_severity": null // Shows all levels: error, warning, info, hint. Set to "error" to limit to errors only.
    }
  },
  "inlay_hints": {
    "enabled": false
  },
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "model_parameters": []
  },
  "disable_ai": false,
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "JetBrains Dark"
  }
}
